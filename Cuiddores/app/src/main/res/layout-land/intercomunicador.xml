<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".Intercomunicador">


    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/intercomunicador"
        android:text="@string/start"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="150dp"
        android:layout_above="@+id/BotonSonido"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/BotonSonido"
        android:layout_width="110dp"
        android:layout_height="113dp"
        android:background="@drawable/botonsonido"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp" />


    <Button
        android:id="@+id/BotonMicro"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/botonmicro"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_alignTop="@+id/BotonSonido"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
