<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".Intercomunicador">

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/intercomunicador"
        android:text="@string/start"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="150dp"
        android:layout_above="@+id/BotonMicro"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/BotonSonido"
        android:layout_width="110dp"
        android:layout_height="113dp"
        android:background="@drawable/botonsonido"
        android:layout_alignTop="@+id/BotonMicro"
        android:layout_toRightOf="@+id/buttonPlay"
        android:layout_toEndOf="@+id/buttonPlay"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />


    <Button
        android:id="@+id/BotonMicro"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/botonmicro"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/buttonPlay"
        android:layout_toStartOf="@+id/buttonPlay"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

</RelativeLayout>
