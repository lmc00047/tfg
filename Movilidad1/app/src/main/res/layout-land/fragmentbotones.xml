<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentbotones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:visibility="invisible"
    tools:context="tutorial.com.movilidad1.MainActivity">

    <Button
        android:id="@+id/botonAzul"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/botonintercomunicador"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/botonVerde"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/botonmensaje"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/botonAmarillo"
        android:layout_toEndOf="@+id/botonAmarillo" />

    <Button
        android:id="@+id/button"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/botonllamada"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/botonAmarillo"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/botonemergencias"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />


</RelativeLayout>