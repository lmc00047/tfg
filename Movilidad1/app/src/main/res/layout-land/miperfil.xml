<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:id="@+id/dialogo_personalizado"
    >

    <TextView
        android:id="@+id/nombreusuario"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:scaleType="center"
        android:text="@string/nameuser"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nombre"
        android:inputType="text"
        android:textSize="13dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_below="@+id/nombreusuario"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />
    <TextView
        android:id="@+id/emailusu"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:scaleType="center"
        android:text="@string/emaildir"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:layout_below="@+id/usuario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/correo"
        android:textSize="13dp"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:inputType="text"
        android:layout_below="@+id/emailusu"
        android:layout_alignLeft="@+id/pass"
        android:layout_alignStart="@+id/pass" />
    <TextView
        android:id="@+id/passusu"

        android:layout_width="350dp"
        android:layout_height="20dp"
        android:scaleType="center"
        android:text="@string/passusu"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:layout_below="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:hint="@string/pass"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:inputType="textPassword"
        android:layout_below="@+id/passusu"
        android:layout_alignLeft="@+id/emailCuidador"
        android:layout_alignStart="@+id/emailCuidador" />
    <TextView
        android:id="@+id/emailcui"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:scaleType="center"
        android:text="@string/emailcui"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:layout_below="@+id/pass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/emailCuidador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/correocuidador"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textSize="13dp"
        android:inputType="text"
        android:layout_below="@+id/emailcui"
        android:layout_alignLeft="@+id/telefono"
        android:layout_alignStart="@+id/telefono" />
    <TextView
        android:id="@+id/tflcui"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:scaleType="center"
        android:text="@string/tlfcui"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:layout_below="@+id/emailCuidador"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/telefono"
        android:textColorHint="#FFFFFF"
        android:textSize="13dp"
        android:textColor="#FFFFFF"
        android:inputType="text"
        android:layout_below="@+id/tflcui"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

</RelativeLayout>