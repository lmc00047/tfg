<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textColorHint="#FFFFFF"
    android:background="@color/colorAccent"
    tools:context="tutorial.com.movilidad1.TextoVoz"
    android:weightSum="1">

    <EditText
        android:id="@+id/etxescribir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/redondear"
        android:ems="10"
        android:hint="@string/reproducir"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFD4"
        android:textSize="18sp" />

    <Button
    android:id="@+id/btnreproducir"
    android:layout_width="111dp"
    android:layout_height="80dp"
    android:background="@drawable/play"
    android:layout_weight="0.04"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_below="@+id/etxescribir"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:id="@+id/btnenviar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/enviar"
        android:layout_weight="0.04"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        android:layout_below="@+id/btnreproducir"
        android:layout_alignRight="@+id/btnreproducir"
        android:layout_alignEnd="@+id/btnreproducir" />
</RelativeLayout>
